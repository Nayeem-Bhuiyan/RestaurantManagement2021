                                                }
                                                else if (data?.month == 6)
                                                {
                                                    <span>Jun</span>
                                                }
                                                else if (data?.month == 7)
                                                {
                                                    <span>July</span>
                                                }
                                                else if (data?.month == 8)
                                                {
                                                    <span>Agust</span>
                                                }
                                                else if (data?.month == 9)
                                                {
                                                    <span>September</span>
                                                }
                                                else if (data?.month == 10)
                                                {
                                                    <span>October</span>
                                                }
                                                else if (data?.month == 11)
                                                {
                                                    <span>November</span>
                                                }
                                                else if (data?.month == 12)
                                                {


                                                    <span>December</span>
                                                }
                                                else
                                                {
                                                    <span>Unknown</span>
                                                }
                                            </td>
                                            <td>@data?.year</td>
                                            <td>@data?.absentTotal</td>

                                        </tr>
                                        Sl = Sl + 1;
                                    }
                                    else
                                    {

                                    }

                                }
                            }
                            else
                            {
                                <tr>
                                </tr>
                            }

                        }


                    </tbody>
                </table>

            </div>
